
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PortfolioAdminLayout.cshtml";
}


<h2>İstatistik Sayfası</h2>

<div class="card text-white bg-primary mb-3" style="width: 100%;">
    <div class="card-body">
        <h5 class="card-title" style="color:white">Toplam Personel Sayısı : @ViewBag.employeeCount</h5>
    </div>
</div>
<div class="card text-white bg-info mb-3" style="width: 100%;">
    <div class="card-body">
        <h5 class="card-title" style="color:white">En Yüksek Maaşlı Persone Personel Sayısı : @ViewBag.maxSalaryEmployee</h5>
    </div>
</div>
<div class="card text-white bg-dark mb-3" style="width: 100%;">
    <div class="card-body">
        <h5 class="card-title" style="color:white">Toplam Şehir Sayısı : @ViewBag.totalCityCount</h5>
    </div>
</div>
<div class="card text-white bg-warning mb-3" style="width: 100%;">
    <div class="card-body">
        <h5 class="card-title" style="color:white">Ortalama Personel Maaşı  : @ViewBag.avgEmployeeSalary</h5>
    </div>
</div>
<div class="card text-white bg-success mb-3" style="width: 100%;">
    <div class="card-body">
        <h5 class="card-title" style="color:white">Yazılım Departmanı Personel Sayısı : @ViewBag.countSoftwareDepartment</h5>
    </div>
</div>
<div class="card text-white bg-danger mb-3" style="width: 100%;">
    <div class="card-body">
        <h5 class="card-title" style="color:white">Ankara ve Adanada Çalışan Personellerin Toplam Maaşı : @ViewBag.cityAnkaraOrAdanaSumSalary</h5>
    </div>
</div>
<div class="card text-white bg-secondary mb-3" style="width: 100%;">
    <div class="card-body">
        <h5 class="card-title" style="color:white">Ankarada Yazılım Departmanında Çalışan Personellerin Toplam Maaşı : @ViewBag.sumSalaryFromSoftwareDepartment</h5>
    </div>
</div>